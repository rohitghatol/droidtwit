<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/screen_background">
	<ImageView android:id="@+id/splashscreen_image"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:layout_centerHorizontal="true" android:paddingTop="20dip"
		android:src="@drawable/splash"></ImageView>
	<ImageButton android:id="@+id/twitter" 
		android:layout_below="@+id/splashscreen_image" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:background="@drawable/twitter_button"></ImageButton>

</RelativeLayout> 
